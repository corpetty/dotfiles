[init]
    defaultBranch = master
[user]
    email       = jakub@status.im
    name        = Jakub Soko≈Çowski
    signingkey  = 580538227C99E6D3
[core]
    editor      = nvim
    quotePath   = false
    commitGraph = true
    autocrlf    = input
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
    conflictstyle = diff3
[alias]
    a   = add
    b   = branch
    cf  = cat-file
    cat = cat-file
    co  = checkout
    cp  = cherry-pick
    df  = diff
    f   = fetch
    l   = log --oneline --decorate
    ls  = ls-files
    c   = commit --verbose --no-verify --gpg-sign --signoff
    fix = commit --verbose --no-verify --gpg-sign --signoff --fixup
    m   = commit --verbose --no-verify --gpg-sign --signoff --amend
    mm  = commit --verbose --no-verify --gpg-sign --signoff --amend --no-edit
    pl  = pull
    ps  = push
    r   = rebase
    rl  = reflog
    rs  = reset
    rsh = reset --hard
    rst = reset --hard HEAD
    s   = stash
    st  = status
    sl  = log --pretty=format:'%<(8)%Cred%h%Creset %C(cyan)%ai%Creset %C(bold yellow)%<(20)%an %C(bold green)>%Creset %s %C(yellow)%d%Creset' --abbrev-commit
    sla = log --pretty=format:'* %h %s %d' --abbrev-commit
    slg = log --graph --pretty=format:'%<(8)%Cred%h%Creset %C(cyan)%ai%Creset %Cgreen(%<(12)%cr) %C(bold blue)%<(21)<%an>%Creset %s %C(yellow)%d%Creset' --abbrev-commit
    sm  = submodule
    u   = url
    up  = branch --set-upstream-to
    x   = sync
[branch "master"]
    remote = origin
    merge = refs/heads/master
[credential]
    helper = cache --timeout=1800
[color]
    ui = true
[push]
    default = current
[pull]
    default = current
    rebase = true
    ff = only
[difftool]
    prompt = false
[web]
    browser = firefox
[commit]
    gpgsign = true
[gpg]
    program = gpg
[receive]
    advertisePushOptions = true
[gc]
    writeCommitGraph = true
[advice]
    detachedHead = false
