#!/usr/bin/env bash

PATH="$PATH:$HOME/bin"

# daemonize command and ingore all output
function run {
    restart=false
    # restart service if -r flag is present
    if [[ $1 == '-r' ]]; then
        restart=true
        shift
    fi
    if [[ $1 == '-c' ]]; then
        command_name=$2
        shift 2
    else
        command_name=$1
    fi
    command=$1
    shift
    # get the arguments
    args=$@
    
    printf " - %-20s" "$command_name"
    if $restart; then
        killall $command 2> /dev/null
    fi
    if ! pgrep -f -d ", " $command_name; then
        echo "STARTING"
        nohup $command $args >> ~/.awesome_apps  2>&1 &
    fi
}

cd /tmp

####### General Settings

# set screen blank timeout to 1 hour
which xset && xset s 3600 3600
# Disable system bell
xset b off
# Keyboard layout
setxkbmap -layout pl
# Disable touchpad
xinput --disable "Elan Touchpad"
# Turn off Caps Lock
xkbset nullify lock

echo "### Autostarting programs:"

####### Keyboard setup

# Caps Lock <-> Esc
run xmodmap ~/.speedswapper
run -r xcape -e 'Control_R=Escape'

####### Programs to run
run urxvtd -q -f -o
run nitrogen --restore
run autorandr --change
run xbindkeys
run blueman-applet
run -r nm-applet
run -r pasystray
run -r xautolock -detectsleep -time 1 -locker slock -notify 20 -notifier anotify -t 10 -w "Locking in 10 seconds..."
